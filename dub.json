{
	"name" : "acos5_64_gui",
	"description" : "Administration tool for ACOS5-64, based on driver acos5_64",
	"license": "GNU General Public License v2.0",
	"copyright": "Copyright © 2018-, Carsten Blüggel",
	"authors": ["Carsten Blüggel"],
	"homepage": "https://github.com/carblue/acos5_64_gui",
	"dependencies" : {
		"iup": "~>3.25.0-beta.1",
		"opensc": "~>0.18.0-beta.4",
		"emsi_containers": "~>0.8.0-alpha.9",
		"tasn1:wrapper": "~>0.0.5",
		"pkcs11": "~>2.40.0-alpha.3"
	},
	"subConfigurations": {
		"opensc": "deimosPrior",
		"pkcs11": "derelict"
	},
	"systemDependencies": "IUP-Portable User Interface shared libraries installed, opensc installation v.0.17.0, libacos5_64.so (binary from this package's opensc_0.17.0 / +libphobos2.so.0.79 from a DMD installation) located in a common .so look-up path, opensc.conf configured appropriately; (not yet required: for gettext the exports available from libintl.so or GLib)",
	"sourceFiles-windows-x86-dmd": [
		"C:/D/dmd2/windows/lib/ole32.lib",
		"oleaut32.lib",
		"uuid.lib"
	],
	"targetName": "acos5_64_gui",
    "mainSourceFile" : "source/acos5_64_gui.d",
	"xxxbuildRequirements" : ["disallowDeprecations"],

	"dflags-posix-dmd": ["-defaultlib=libphobos2.so"],
	"dflags-posix-ldc": ["-defaultlib=phobos2-ldc-shared,druntime-ldc-shared"],
	"xdflagsx-posix-gdc": ["-shared-libphobos", "-Wunknown-pragmas", "-vtls", "-vcg-ast", "-defaultlib=libphobos2.so"],

	"lflags-posix" : ["--no-undefined", "--as-needed"],
	"xlflagsx-posix-x86_64-ldc": ["-rpath=$HOME/Downloads/dlang/ldc2-1.9.0-linux-x86_64/lib"],
	"libs-posix": ["iupimglib"],
	"lflags-windows-x86-fixme": ["/SUBSYSTEM:WINDOWS:6.00"   , ":opensc-pkcs11.so", "acos5_64"],
	"postBuildCommands-windows" : ["strip -s acos5_64_gui.exe"],
	"versions": ["Have_acos5_64", "I18N"],
	"configurations": [
		{
			"name": "application",
	        "targetType": "executable",
            "excludedSourceFiles": [],
			"dflags": []
		},
		{
			"name": "travis",
	        "targetType": "executable",
            "excludedSourceFiles": [],
			"dflags": [],
			"buildRequirements": ["disallowDeprecations"]
		},
		{
			"name": "unittest",
			"targetType": "library",
			"dflags": []
		}
	]
}
